        refreshActiveBattle(data.battleId);
        
        // Also reload armies list to update invitation status
        if (currentCampaign?.campaign.id && user?.id) {
          armyAPI.getPlayerArmies(currentCampaign.campaign.id, user.id)
            .then(setArmies)
            .catch(console.error);
