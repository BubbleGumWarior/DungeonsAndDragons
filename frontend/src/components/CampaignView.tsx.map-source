                        // Clear canvas with black background
                        ctx.fillStyle = 'rgba(0, 0, 0, 0.3)';
                        ctx.fillRect(0, 0, canvas.width, canvas.height);
                        
                        // Calculate dimensions based on scale
                        // We need to maintain aspect ratio and scale properly
